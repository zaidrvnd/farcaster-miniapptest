{
  "name": "Farcaster Connect & Tip Jar",
  "description": "A simple Farcaster Mini App for connecting and tipping.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#6366f1",
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "farcaster": {
    "min_app_sdk_version": "0.0.49",
    "capabilities": {
      "wallet": true,
      "actions": true
    },
    "chains": ["eip155:1", "solana:101"]
  }
}
